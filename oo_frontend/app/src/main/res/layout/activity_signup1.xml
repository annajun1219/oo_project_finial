<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <!-- 화면 상단 제목 "회원가입" -->
    <TextView
        android:id="@+id/tv_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"/>



    <!-- 단계 UI -->
    <LinearLayout
        android:id="@+id/layout_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tv_signup_title"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp">

        <!-- 단계 1 (현재 단계) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/step_circle_selected"
                android:text="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:elevation="4dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 정보"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 점선 연결 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="  . . .  "
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="18dp"
            android:textColor="#888888"
            android:layout_marginEnd="8dp" />

        <!-- 단계 2 (다음 단계) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/step_circle_unselected"
                android:text="2"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 입력 폼 -->
    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_above="@id/buttonNext"
        android:layout_below="@id/layout_steps"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="이메일"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextEmailFront"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_input"
                    android:hint="이메일 입력"
                    android:paddingHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:text="@sookmyung.ac.kr"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCheckId"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/login_button"
                    android:text="중복 확인"
                    android:textColor="#000000" />

            </LinearLayout>



            <!-- 비밀번호 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:text="비밀번호"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_input"
                android:hint="   비밀번호 입력"
                android:inputType="textPassword"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/editTextPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_input"
                android:hint="   비밀번호 확인"
                android:inputType="textPassword" />

            <!-- 휴대폰 번호 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="휴대폰 번호"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextPhone1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_input"
                    android:gravity="center"
                    android:hint="010"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/editTextPhone2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_input"
                    android:gravity="center"
                    android:hint="1234"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="-" />

                <EditText
                    android:id="@+id/editTextPhone3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_input"
                    android:gravity="center"
                    android:hint="5678"
                    android:inputType="number"
                    android:maxLength="4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_button"
        android:text="다음"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
