<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:contentDescription="뒤로가기" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="120dp"/>
        </LinearLayout>

        <!-- 프로필 + 평점 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textNickname"
                    android:text="이기연"
                    android:layout_marginStart="6dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="center_vertical">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        style="?android:attr/ratingBarStyleSmall" />

                    <TextView
                        android:id="@+id/textAverageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.95"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="후기 12"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 키워드 카운트 -->
        <!-- 키워드 카운트 -->
        <LinearLayout
            android:id="@+id/keywordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- 예시 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/review_keyword_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/keyword1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="답장이 빨라요"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/keyword1_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000" />
            </RelativeLayout>

            <!-- 예시 2 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/review_keyword_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/keyword2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="교재설명과 실제상품이 동일해요"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/keyword2_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000" />
            </RelativeLayout>

            <!-- 예시 3 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/review_keyword_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/keyword3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="친절하고 배려가 넘쳐요"
                    android:textSize="15sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/keyword3_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000" />
            </RelativeLayout>

        </LinearLayout>

        <!-- 리뷰 목록 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 리뷰"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <!-- 리뷰 목록 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
