<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatRoomLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="12dp">

    <!-- 상단 바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로가기" />

    <TextView
        android:id="@+id/chatRoomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="상대방 이름"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_share"
        android:contentDescription="공유" />
</RelativeLayout>

    <!-- 책 정보 카드 -->
    <LinearLayout
        android:id="@+id/bookCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_card_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_book_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객체지향 프로그래밍"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="18,000원"
                android:textColor="#888888"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirmTransactionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매자와 거래확정하기"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- 메시지 리스트 -->
    <ListView
        android:id="@+id/messageListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <!-- 입력창 -->
    <LinearLayout
        android:id="@+id/messageInputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/attachButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_attach_file"
            android:layout_marginStart="8dp"
            android:contentDescription="전송 버튼" />

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:hint="메시지 보내기"
            android:inputType="text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/sendButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_send"
            android:layout_marginStart="8dp"
            android:contentDescription="전송 버튼" />
    </LinearLayout>
</LinearLayout>
