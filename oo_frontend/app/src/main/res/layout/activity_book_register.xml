<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:padding="16dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:contentDescription="뒤로가기"
                android:layout_marginBottom="16dp" />

            <!-- 사진 업로드 버튼 (최대 5장 제한은 Java에서 처리) -->
            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageUploadButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_image_upload_2"
                    android:contentDescription="사진 업로드"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:hint="교재명"
                android:inputType="text" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/editProfessor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:hint="교수명"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/editOfficialPrice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="정가"
                    android:inputType="number" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <EditText
                    android:id="@+id/editPrice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="판매가"
                    android:inputType="number" />
            </LinearLayout>

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:hint="교재에 대한 설명을 최대한 자세히 적어주세요."
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="#80CDD1CA"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 작성완료 버튼 고정 -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/bottomNavigationView"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:text="작성완료"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@null"
        android:backgroundTint="#E3EBB7"
        android:gravity="center"
        android:elevation="6dp" />

    <!-- 하단 네비게이션 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="50dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector" />

</RelativeLayout>
