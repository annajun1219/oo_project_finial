<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 상단 바 -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기" />

        <TextView
            android:id="@+id/chatRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="상대방 이름"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share"
            android:contentDescription="공유" />
    </RelativeLayout>

    <!-- 책 정보 카드 -->
    <LinearLayout
        android:id="@+id/bookCard"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_card_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_book_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객체지향 프로그래밍"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="18,000원"
                android:textColor="#888888"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 메시지 리스트 -->
    <ScrollView
        android:id="@+id/messageScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/bookCard"
        android:layout_above="@id/messageInputSection"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- 하단 입력 영역 -->
    <LinearLayout
        android:id="@+id/messageInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메시지를 입력하세요"
            android:padding="12dp"
            android:background="@drawable/search_background"
            android:textColor="#000000" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:layout_marginStart="8dp"
            android:backgroundTint="#E3EBB7"
            android:textColor="#000000" />
    </LinearLayout>
</RelativeLayout>
