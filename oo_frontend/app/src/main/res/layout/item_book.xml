<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#F9F9F9"
    android:layout_marginBottom="8dp">

    <!-- 썸네일 이미지 -->
    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/book_sample1"
        android:layout_marginEnd="12dp" />

    <!-- 교재 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 교재명 + 판매가 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객체지향 프로그래밍"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/bookSalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15,000원"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <!-- 정가 -->
        <TextView
            android:id="@+id/bookOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정가 28,000원"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <!-- 시세 · 교수명 · 카테고리 -->
        <TextView
            android:id="@+id/bookMetaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시세 15,284원 · 김스베틀라나 · 공과대학"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>

