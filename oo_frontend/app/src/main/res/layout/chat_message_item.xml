<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 왼쪽 말풍선 (상대방) -->
    <LinearLayout
        android:id="@+id/leftMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_message_left"
        android:padding="12dp"
        android:layout_gravity="start"
        android:layout_marginEnd="48dp">

        <TextView
            android:id="@+id/leftMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상대방 메시지"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 오른쪽 말풍선 (내 메시지) -->
    <LinearLayout
        android:id="@+id/rightMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_message_right"
        android:padding="12dp"
        android:layout_gravity="end"
        android:layout_marginStart="48dp">

        <TextView
            android:id="@+id/rightMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 메시지"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>
