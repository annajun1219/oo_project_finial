<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <!-- 하단 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="50dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector" />

    <!-- 전체 콘텐츠 -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 연두색 배경 -->
            <RelativeLayout
                android:id="@+id/profileHeader"
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:background="#e3ebb7"
                android:clipChildren="false">

                <!-- 프로필 사진 -->
                <FrameLayout
                    android:id="@+id/profileImageContainer"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp">

                    <ImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_circle_white"
                        android:elevation="3dp" />

                    <ImageView
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_circle_white"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_camera"/>
                </FrameLayout>

                <!-- 사용자 이름 -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileImageContainer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="강민주"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 하트 (닉네임 오른쪽 위) -->
                <FrameLayout
                    android:id="@+id/heartFrame"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tvUserName"
                    android:layout_alignEnd="@id/tvUserName"
                    android:layout_marginEnd="-100dp"
                    android:layout_marginBottom="-30dp"></FrameLayout>

                <LinearLayout
                    android:id="@+id/reportHeartContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="200dp"
                    android:layout_toEndOf="@id/profileImageContainer"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 하트 아이콘 -->
                    <ImageView
                        android:id="@+id/icHeart"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/rounded_circle_white"
                        android:elevation="4dp"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_heart" />

                    <!-- 신고 아이콘 + 숫자 겹치기 -->
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="40dp">


                        <!-- 신고 횟수 (아이콘 위쪽에 겹치게) -->
                        <ImageView
                            android:id="@+id/icReport"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@id/profileImageContainer"
                            android:background="@drawable/rounded_circle_white"
                            android:elevation="4dp"
                            android:padding="6dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_siren" />

                        <TextView
                            android:id="@+id/tvReportCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-8dp"
                            android:layout_marginEnd="-1dp"
                            android:elevation="2dp"
                            android:minWidth="18dp"
                            android:padding="2dp"
                            android:text="1"
                            android:textColor="#FF0000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>


                <!-- 별점/후기 -->
                <LinearLayout
                    android:id="@+id/scoreContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUserName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="⭐" />

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="5.0"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="| 후기 ➡"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 카드: 판매 / 구매 -->
            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="-60dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- 판매 -->
                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="30dp"
                    android:clipChildren="false">

                    <LinearLayout
                        android:id="@+id/cardSell"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:gravity="center"
                        android:paddingTop="24dp"
                        android:padding="8dp"
                        android:elevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="판매 내역"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales Details"
                            android:textSize="12sp"
                            android:textColor="#999999" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_delivery"
                        android:translationY="-35dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/cell_num"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/circle_gray"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <!-- 구매 -->
                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    >

                    <LinearLayout
                        android:id="@+id/cardBuy"
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:background="@drawable/card_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:paddingTop="24dp"
                        android:elevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="구매 내역"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purchase Details"
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top|end"
                        android:src="@drawable/ic_basket"
                        android:translationY="-28dp"
                        android:elevation="2dp"/>

                    <TextView
                        android:id="@+id/purchase_num"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="2dp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAddTimetable"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/login_button"
                android:elevation="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="➕  시간표 등록"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timetableContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="20dp">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/timetableGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="6"
                    android:rowCount="5"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>


